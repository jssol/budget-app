<header class="header">
  <section>
    <% if current_page? user_groups_path || user_group_entities_path %>
    <button type="button" class="hamburger-button">
      <%= fa_icon "bars", class: "hamburger" %>
    </button>
    <% else %>
      <%= link_to :back do %>
        <%= fa_icon "chevron-left" %>
      <% end %>
    <% end %>
  </section>
  <p class="page-title">
    <% if current_page? new_user_session_path %>
      LOGIN
    <% elsif current_page? new_user_registration_path %>
      REGISTER
    <% elsif current_page? user_groups_path %>
      GROUPS
    <% elsif current_page? new_user_group_path %>
      ADD GROUP
    <% end %>
  </p>
  <section>
    <% if current_page? new_user_session_path %>
      <button type="submit" form="new_user" value="Log In">Log In</button>
    <% elsif current_page? new_user_registration_path %>
      <button type="submit" form="new_user" value="Next">Next</button>
    <% elsif current_page? user_groups_path || user_group_entities_path %>
      <%= fa_icon "search", class: "pointer" %>
    <% end %>
  </section>
</header>
