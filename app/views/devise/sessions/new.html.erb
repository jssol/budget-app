<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder: :email, autocomplete: "email", class: "field-input" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: :password, autocomplete: "current-password", class: "field-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<% end %>

<section class="shared-links">
  <%= render "devise/shared/links" %>
</section>
