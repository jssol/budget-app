<section class="profile-container">
  <div class="profile-picture">
    <%= fa_icon "user" %>
  </div>
  <div class="profile-info">
    <p><span class="bold">Full name:</span> <%= @user.name %></p>
    <p><span class="bold">Email:</span> <%= @user.email %></p>
    <p><span class="bold">Account created on:</span> <%= @user.created_at.strftime("%d-%b-%y") %></p>
  </div>
</section>
