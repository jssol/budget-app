<section class="entities-index-page">
  <nav class="entities-nav">
    <ul class="entities-nav-list">
      <li class="entities-nav-list-item" id="all-expenses">
        <%= link_to "All", user_group_entities_path %>
      </li>
      <li class="entities-nav-list-item" id="recent-expenses">
        <%= link_to "Most recent", recent_expenses_path %>
      </li>
      <li class="entities-nav-list-item" id="ancient-expenses">
        <%= link_to "Most ancient", ancient_expenses_path %>
      </li>
      <li class="entities-nav-list-item" id="expensive-expenses">
        <%= link_to "Most expensive", expensive_expenses_path %>
      </li>
    </ul>
  </nav>
  <% if @entities.empty? %>
    <p class="no-expense">No expenses yet!</p>
  <% end %>
  <section class= "groups-container">
    <% @entities.each do |entity| %>
       <p><%= entity.name %></p>
    <% end %>
  </section>
  <%= link_to "Add new expense", new_user_group_entity_path, class: "add-group-button" %>
</section>
